<Label>:
    font_size: 30
    color: 0.3, 0.4, 0.5, 1

<Button>:
    font_size: 30
    color: 0.3, 1, 1, 1

<RomanGrid>:

    arabic_number: arabic_number

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                id: label1
                text: 'enter Arabic number:'
            
            TextInput:
                multiline: False
                id: arabic_number

        Button:
            id: button1
            text: 'Convert'
            on_press: root.request()

        Label:
            id: label2
            text: root.roman_number